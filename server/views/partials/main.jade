form(role="form")

	.panel.panel-secondary.enter
		.panel-heading
			h3.panel-title Step 1: Search for the movie title
		.panel-body
			.input-group.input-group-lg
				input(type="text" class="form-control" placeholder="Movie, TV show, etc..." typeahead="movie.title + ' - ' + movie.title_description for movie in getMovies($viewValue)" typeahead-editable="false" typeahead-on-select="onSelect($item, $model, $label)" ng-model="movie.title")
				span(class="input-group-btn")
					button(class="btn btn-secondary btn-lg" type="button")
						span.glyphicon.glyphicon-search

			.form-group.hidden
				label(for="exampleInputFile") File input
				input(type="file" id="exampleInputFile")
				p.help-block Example block-level help text here.

	.panel.panel-secondary(ng-hide="!subtitle.movie")
		.panel-heading
				h3.panel-title Step 2: Choose the languages for the subtitles
			.panel-body
				.row
					.col-xs-6
						label Native language
						div(bs-language-picker flags="true" blank="true" ng-model="subtitle.language")
					.col-xs-6
						label Foreign language
						div(bs-language-picker flags="true" blank="true" ng-model="subtitle.foreignLanguage")

	.panel.panel-secondary(ng-hide="true || !movie && (!subtitle.language || !subtitle.foreignLanguage)")
		.panel-heading
				h3.panel-title Step 3: Choose how much of the foreign language to be merged
			.panel-body
				.row
					.col-xs-12
						label Blending percentage (%)
						div(range-slider min="0" max="100" model-min="min" model-max="max" pin-handle="min" show-values="true" step="10")
	.panel.panel-secondary(ng-hide="true")
		.panel-heading
				h3.panel-title Step 4: Download the mixed subtitle
			.panel-body
				.row
					.col-xs-12
						a(href="#") subtitle-en.srt

	button(bs-button="merge()" class="btn btn-primary btn-lg center-block")
		span.ladda-label Merge
